<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_time_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="7dp"
        android:textSize="18sp"
        android:textColor="@color/transparentGrey"
        tools:text="Today"/>

    <LinearLayout
        android:id="@+id/item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/list_item_background"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="14dp">
            <ImageView
                android:id="@+id/iv_chat_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@mipmap/ic_default_profile"/>
            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/compativ_group"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:padding="2dp"
                android:layout_marginBottom="-3dp"
                android:layout_marginRight="-3dp"
                app:srcCompat="@drawable/ic_group_black_18dp"
                android:layout_gravity="bottom|right"
                android:tint="@color/colorPrimary"
                android:background="@drawable/background_group_chat_icon"/>

        </FrameLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_chat_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="ChatName"/>
            <TextView
                android:id="@+id/tv_last_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/grey"
                android:text="Lorem ipsum"
                android:lines="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/tv_last_message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="10:10"/>
            <TextView
                android:id="@+id/tv_new_message_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bubble_blue"
                android:layout_marginTop="10dp"
                android:paddingRight="8dp"
                android:paddingLeft="8dp"
                android:layout_gravity="right"
                android:gravity="center_horizontal"
                style="@style/LightText"
                tools:text="00"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>

